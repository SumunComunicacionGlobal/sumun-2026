  },
  "homepage": "https://github.com/SumunComunicacionGlobal/sumun-2026#readme",
  "devDependencies": {
    "@wordpress/scripts": "^31.2.0",
    "@wordpress/stylelint-config": "^23.31.0",
    "dir-archiver": "^2.1.0",
    "sass": "^1.97.3",
    "stylelint": "^16.9.0",
    "uglify-js": "^3.19.0"
  },
  "scripts": {
    "watch": "sass --watch sass:./ --no-source-map --style compressed",
    "compile:css": "sass sass:./ && stylelint '*.css' --fix || true && stylelint '*.css' --fix",
    "compile:js": "uglifyjs assets/js/*.js > assets/js/sumun.min.js",
    "bundle": "dir-archiver --src . --dest ../sumun.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map yarn.lock",
    "sync": "browser-sync start --proxy 'http://localhost/sumun-2026/' --files ['**/*.php', '*.*']",
    "dev": "npm run watch & npm run sync"
  }
}
